datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model WebSocketConnection {
  createdAt     DateTime       @default(now())
  id            String         @id @default(cuid())
  messages      Message[]
  socketId      String?
  subscriptions Subscription[]
  updatedAt     DateTime       @updatedAt
  user          User?          @relation(fields: [userId], references: [id])
  userId        String?
}

model Message {
  content               String?
  createdAt             DateTime             @default(now())
  id                    String               @id @default(cuid())
  sender                String?
  timestamp             DateTime?
  updatedAt             DateTime             @updatedAt
  webSocketConnection   WebSocketConnection? @relation(fields: [webSocketConnectionId], references: [id])
  webSocketConnectionId String?
}

model User {
  createdAt            DateTime              @default(now())
  email                String?
  id                   String                @id @default(cuid())
  updatedAt            DateTime              @updatedAt
  username             String?
  webSocketConnections WebSocketConnection[]
}

model Subscription {
  createdAt             DateTime             @default(now())
  id                    String               @id @default(cuid())
  topic                 String?
  updatedAt             DateTime             @updatedAt
  webSocketConnection   WebSocketConnection? @relation(fields: [webSocketConnectionId], references: [id])
  webSocketConnectionId String?
}
